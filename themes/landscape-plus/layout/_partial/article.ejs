<article
        id="<%= post.layout %>-<%= post.slug %>"
        class="article article-type-<%= post.layout %>"
        itemscope
        itemprop="blogPost"
>
    <div class="article-meta">
        <%- partial('post/date', { class_name: 'article-date', date_format: null }) %> <%- partial('post/category') %>
    </div>
    <div class="article-inner">
        <%- partial('post/gallery') %>
        <% if (post.link || post.title){ %>
            <header class="article-header"><%- partial('post/title', {
                    class_name: 'article-title',
                    nav: 0
                }) %></header>
        <% } %>
        <div class="article-entry" itemprop="articleBody">
            <% if (post.excerpt && index){ %> <%- post.excerpt %> <% if (config.excerpt_lint || theme.excerpt_link){ %>
                <p class="article-more-link">
                    <a href="<%- url_for(post.path) %>#more"><%= config.excerpt_lint || theme.excerpt_link %></a>
                </p>
            <% } %>
            <% } else { %> <%- post.content %>
            <% } %>
        </div>

        <%- partial('post/tag') %>
    </div>

    <% if (!index && post.source?.endsWith(".md") && post.comments){ %>
        <code>
            <% post %>
        </code>
        <div id="comments" class="archive-article-inner">
            <script
                    src="https://utteranc.es/client.js"
                    repo="Trim21/blog"
                    issue-term="<%= post.slug %>"
                    theme="github-light"
                    crossorigin="anonymous"
                    async
            ></script>
        </div>
        <style></style>
    <% } %>
</article>
